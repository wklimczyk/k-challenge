<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="KahootTextAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KahootTextAppearance.Info">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="KahootTextAppearance.Question">
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="KahootTextAppearance.ScoreBar">
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="KahootTextAppearance.Counter">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KahootTextAppearance.Type">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KahootStyleguide" />

    <style name="KahootStyleguide.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/grey_33_800</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>